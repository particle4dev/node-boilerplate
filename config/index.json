{
  "http": {
    "port": 4000
  },
  "db": {
    "mongo": {
      "options": {
        "server": {
          "socketOptions":{
            "keepAlive": 1,
            "autoReconnect": true
          },
          "reconnectTries": 60,
          "reconnectInterval": 1000
        }
      }
    },
    "redis": {
      "start": true
    }
  },
  "cluster": false,
  "maxClusters": 3
}
